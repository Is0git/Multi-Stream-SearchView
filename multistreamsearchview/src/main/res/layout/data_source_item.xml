<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/sourceButton"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:cardUseCompatPadding="true"
        app:elevation="2dp"
        app:cardCornerRadius="15dp"
        app:layout_goneMarginTop="8dp"
        app:backgroundTint="@color/colorSurface"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <ImageView
            android:id="@+id/sourceIcon"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:background="@drawable/recent_icon"/>
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/sourceText"
        style="@style/TextAppearance.MaterialComponents.Body2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:gravity="center"
        android:lines="1"
        android:textColor="@color/colorOnSurface"
        android:text="@string/all"
        android:textAlignment="center"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/sourceButton"
        app:layout_constraintStart_toStartOf="@+id/sourceButton"
        app:layout_constraintTop_toBottomOf="@+id/sourceButton" />
</androidx.constraintlayout.widget.ConstraintLayout>